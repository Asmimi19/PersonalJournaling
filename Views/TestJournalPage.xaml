<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalJournaling.Views.TestJournalPage"
             Title="Journal Entry Test">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Title" FontAttributes="Bold"/>
            <Entry x:Name="TitleEntry" Placeholder="Enter title"/>
            <Label Text="Content" FontAttributes="Bold"/>
            <Editor x:Name="ContentEditor" HeightRequest="150" Placeholder="Enter content"/>
            <Button Text="Save / Update Entry" Clicked="OnSaveEntryClicked"/>
            <Button Text="Load Today's Entry" Clicked="OnLoadEntryClicked"/>
            <Button Text="Delete Today's Entry" Clicked="OnDeleteEntryClicked"/>
            <Label Text="Output" FontAttributes="Bold"/>
            <Label x:Name="OutputLabel" TextColor="DarkBlue"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
